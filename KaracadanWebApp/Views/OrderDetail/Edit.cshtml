@using KaracadanWebApp.Data;
@using KaracadanWebApp.ViewModels.OrderDetails
@model EditOrderDetailViewModel;

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="OrderId" />
    <input type="hidden" asp-for="ProductId" />

    <div class="form-group">
        <label asp-for="Quantity">Quantity</label>
        <input asp-for="Quantity" class="form-control" placeholder="Quantity">
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PriceProductOrderDetail">Product Price</label>
        <input asp-for="PriceProductOrderDetail" class="form-control" placeholder="Product Price">
        <span asp-validation-for="PriceProductOrderDetail" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>