@using KaracadanWebApp.Data;
@using KaracadanWebApp.ViewModels.Orders
@model EditOrderViewModel;

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="ApplicationUserId" />
    <input type="hidden" asp-for="Date"/>

    <div class="form-group">
        <label asp-for="No">No</label>
        <input asp-for="No" class="form-control" placeholder="No">
        <span asp-validation-for="No" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OrderStatus">Order Status</label>
        <select class="form-control" asp-for="OrderStatus" asp-items="@Html.GetEnumSelectList<OrderStatus>()">
            <option>---select---</option>
        </select>
        <span asp-validation-for="OrderStatus" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>