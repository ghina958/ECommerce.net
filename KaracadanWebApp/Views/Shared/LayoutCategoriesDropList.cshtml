@using KaracadanWebApp.Interfaces;
@using KaracadanWebApp.ViewModels


@inject ICategoryRepository _categoryRepository;
@{
    var dropDownCategories = await _categoryRepository.GetAllCategories();
}

<ul class="navbar-nav">

    <li class="nav-item dropdown">

        <a id="dropdownSubMenu1" href="Home/DropdownCategories" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="nav-link dropdown-toggle">
            Categories
        </a>


        <ul class="dropdown-menu border-0 shadow">

            @foreach (var item in dropDownCategories)
            {
                <li style="text-align: center">
                    <a class="dropdown-item" asp-controller="Home" asp-action="DropdownItems" asp-route-id="@item.Id"> @item.Name</a>
                </li>

            }

        </ul>
    </li>
</ul>
